!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title GoogleSearchExtractor
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    %script{crossorigin: "anonymous", integrity: "sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==", referrerpolicy: "no-referrer", src: "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"}
    %script{crossorigin: "anonymous", integrity: "sha512-1/RvZTcCDEUjY/CypiMz+iqqtaoQfAITmNSJY17Myp4Ms5mdxPS5UV7iOfdZoxcGhzFbOm6sntTKJppjvuhg4g==", referrerpolicy: "no-referrer", src: "https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.min.js"}
  %body
    .container-fluid
      %nav.navbar.navbar-expand-lg.navbar-light.bg-light
        %a.navbar-brand{ href: root_path} Google Search Extractor
        %button.navbar-toggler{ type: "button", "data-bs-toggle": "collapse", "data-bs-target": "#navbarNav", "aria-controls": "navbarNav", "aria-expanded": "false", "aria-label": "Toggle navigation" }
          %span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          %ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            - if user_signed_in?
              %li.nav-item
                = link_to "Uploaded Keywords", keywords_path, class: "nav-link"
              %li.nav-item
                = link_to "Search Across Report", search_path, class: "nav-link"
              %li.nav-link
                %span.navbar-text= username(current_user)
              %li.nav-item
                = link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link"
            - else
              %li.nav-item
                = link_to "Sign in", new_user_session_path, class: "nav-link"
              %li.nav-item
                = link_to "Sign up", new_user_registration_path, class: "nav-link"

      .container
        = render partial: 'layouts/flash'

      = yield
