!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title GoogleSearchExtractor
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
  %body
    .container-fluid
      %nav.navbar.navbar-expand-lg.navbar-light.bg-light
        %a.navbar-brand{ href: "#" } Google Search Extractor
        %button.navbar-toggler{ type: "button", "data-bs-toggle": "collapse", "data-bs-target": "#navbarNav", "aria-controls": "navbarNav", "aria-expanded": "false", "aria-label": "Toggle navigation" }
          %span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          %ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            %li.nav-item
              = link_to "Home", "#", class: "nav-link"
            %li.nav-item
              = link_to "About", "#", class: "nav-link"
            %li.nav-item
              = link_to "Contact", "#", class: "nav-link"

      .container
        - flash.each do |name, msg|
          - if msg.is_a?(String)
            .alert{ class: "alert-#{name == :notice ? 'success' : 'danger'} alert-dismissible fade show", role: "alert" }
              %button{ type: "button", class: "btn-close", "data-bs-dismiss": "alert", "aria-label": "Close" }
              = msg

      = yield
